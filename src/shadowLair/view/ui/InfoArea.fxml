<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1"
      spacing="8" alignment="CENTER" fillWidth="false"
      fx:controller="shadowLair.view.ui.InfoAreaController">

    <Label text="Information" styleClass="h2"/>

    <TextArea fx:id="textArea" wrapText="true" editable="false" prefRowCount="4" prefWidth="384"
              styleClass="h3"/>

    <Button fx:id="okButton" text="Ok" onAction="#OkButtonAction"/>

</VBox>
