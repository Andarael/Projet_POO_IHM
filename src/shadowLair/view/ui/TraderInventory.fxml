<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="shadowLair.controller.ui.TraderInventoryController"
      alignment="TOP_CENTER" spacing="8">

    <fx:include fx:id="inventory" source="Inventory.fxml"/>

    <GridPane alignment="CENTER" fx:id="buttonArea" hgap="16" vgap="16">
        <Button fx:id="buyButton" onAction="#buySelectedItem" text="Buy" GridPane.columnIndex="1"/>
        <Button fx:id="sellButton" onAction="#sellSelectedItem" text="Sell"/>
    </GridPane>
</VBox>
