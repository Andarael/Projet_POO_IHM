<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1" fx:id="interactionArea" alignment="CENTER" spacing="16"
      fx:controller="shadowLair.view.ui.InteractionController">

    <Label fx:id="npcInteractionLabel" alignment="CENTER" maxWidth="Infinity" styleClass="h2"
           text="What to do with [...] : "/>

    <HBox alignment="CENTER" spacing="32">
        <Button fx:id="attackButton" alignment="CENTER" onAction="#attackButtonAction"
                prefWidth="128" text="Attack"/>

        <Button fx:id="talkButton" onAction="#talkButtonAction" prefWidth="128"
                text="Talk"/>

        <Button fx:id="lookButton" onAction="#lookButtonAction" prefWidth="128"
                text="Look"/>
    </HBox>

</VBox>
