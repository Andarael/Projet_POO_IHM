<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.HBox?>

<HBox xmlns:fx="http://javafx.com/fxml/1" prefHeight="32" spacing="16"
      fx:controller="view.ui.TopButtonsController">

    <Button fx:id="lookPlaceButtonButton" onAction="#lookPlaceAction" text="Look Place"/>
    <Button fx:id="lootPlaceButton" onAction="#lootPlaceAction" text="Loot Place"/>
    <Separator orientation="VERTICAL" />
    <Button fx:id="quitButton" onAction="#quitAction" text="Quit Game"/>
    <Button fx:id="resetButton" onAction="#helpAction" text="Help"/>

</HBox>
